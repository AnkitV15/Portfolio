---
// src/components/Contact.astro

// I'm assuming you are using the environment variable method.
// If not, just replace {formspreeURL} in the form action with your direct URL string.

import { siteConfig } from "../config";
const formspreeURL = import.meta.env.PUBLIC_FORMSPREE_URL;


// --- DYNAMIC CONTACT INFO ---
// Change these details to your own!
const contact = {
  location: siteConfig.location,
  email: siteConfig.social.email,
  linkedin: siteConfig.social.linkedin,
}
---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="header">
      <h2>CONTACT</h2>
      <div class="underline"></div>
    </div>

    <div class="contact-wrapper">
      <div class="contact-info">
        <div class="info-item">
          <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
          </div>
          <div class="info-text">
            <h3>Location</h3>
            <p>{contact.location}</p>
          </div>
        </div>
        <a href={`mailto:${contact.email}`}
          aria-label="Email">
          <div class="info-item">
            <div class="icon-wrapper">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </div>
            <div class="info-text">
              <h3>Email</h3>
              <p>{contact.email}</p>
            </div>
          </div>
        </a>
        <a href={contact.linkedin}>
          <div class="info-item">
            <div class="icon-wrapper">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 6.75z" />
              </svg>
            </div>
            <div class="info-text">
              <h3>Linkedin</h3>
              <p>{contact.linkedin}</p>
            </div>
        </div>
        </a>
      </div>

      <form
        action={formspreeURL}
        method="POST"
        class="contact-form"
      >
        <div class="form-row">
          <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your name  " required />
          </div>
          <div class="form-group">
            <label for="email">Your Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email  " required />
          </div>
        </div>
        <div class="form-group">
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" placeholder="Enter your Subject  " required />
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="6" placeholder="Enter your message  "required></textarea>
        </div>
        <div class="form-actions">
           <button type="submit" class="submit-btn">Send Message</button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  :root {
    --primary-color: #1d4ed8; /* The vibrant blue from your design */
    --primary-color-dark: #1d4ed8;
    --text-dark: #1e293b;
    --text-light: #64748b;
    --border-color: #cbd5e1;
  }

  .contact-section {
    padding: 4.5rem 2rem;
    background-color: #f8fafc; /* A very light grey for subtle contrast */
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .underline {
    width: 80px;
    height: 4px;
    background-color: var(--primary-color);
    margin: 0 auto;
    border-radius: 2px;
  }
  
  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    align-items: flex-start;
  }

  /* Left Side: Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem; /* Adjusted gap slightly */
  }

  /* --- MODIFIED --- */
  .info-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    text-align: left;
    /* Added styles to make it card-like */
    padding: 1.5rem;
    border-radius: 0.75rem; /* 12px */
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }

  .icon-wrapper {
    flex-shrink: 0;
    background-color: #212121;
    color: white;
    padding: 1rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Added transition for smooth color change */
    transition: background-color 0.3s ease-in-out;
  }
  .icon {
    width: 24px;
    height: 24px;
  }
  .info-text h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0 0 0.25rem 0;
    /* Added transition for smooth color change */
    transition: color 0.3s ease-in-out;
  }
  .info-text p {
    margin: 0;
    color: var(--text-light);
    /* Added transition for smooth color change */
    transition: color 0.3s ease-in-out;
  }
  
  /* --- NEW --- */
  /* This is the new hover effect */
  .info-item:hover {
    background-color: var(--text-dark); /* The dark background on hover */
    transform: translateY(-5px);      /* A subtle lift effect */
  }

  .info-item:hover .info-text h3,
  .info-item:hover .info-text p {
    color: #f8fafc; /* Makes the text light to be readable on the dark background */
  }

  .info-item:hover .icon-wrapper {
    background-color: var(--primary-color); /* Changes icon background to your blue accent color */
  }


  /* Right Side: Form */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: flex;
    gap: 1.5rem;
  }

  .form-group {
    flex: 1; 
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .form-group label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #334155;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.85rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s, box-shadow 0.3s;
    background-color: #fff;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(29, 78, 216, 0.2);
  }

  .form-actions {
    text-align: center;
    margin-top: 1rem;
  }

  .submit-btn {
    padding: 1rem 2.5rem;
    background-color: var(--primary-color);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
  }

  .submit-btn:hover {
    background-color: var(--primary-color-dark);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 900px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 600px) {
    .form-row {
      flex-direction: column;
    }
  }
</style>